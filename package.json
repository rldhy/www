    "prettier-plugin-tailwindcss": "0.6.14",
    "typescript": "5.9.3",
    "yarn-upgrade-all": "0.7.5"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.6.1"

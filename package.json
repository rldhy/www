    "@tailwindcss/typography": "0.5.19",
    "autoprefixer": "10.4.21",
    "contentlayer2": "0.5.8",
    "esbuild": "0.25.10",
    "github-slugger": "2.0.0",
    "gray-matter": "4.0.3",
    "image-size": "2.0.2",
    "next": "15.5.4",
    "next-contentlayer2": "0.5.8",
    "next-themes": "0.4.6",
    "node-cache": "5.1.2",
    "pliny": "0.4.1",
